# ── Server ──────────────────────────────────────────────
NODE_ENV=development
PORT=5000

# ── Database (PostgreSQL) ───────────────────────────────
DATABASE_URL=postgresql://user:password@localhost:5432/interview_ai

# ── JWT Secrets (generate with: openssl rand -hex 64) ───
JWT_ACCESS_SECRET=change-me-access-secret-64-chars-min
JWT_REFRESH_SECRET=change-me-refresh-secret-64-chars-min
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ── Gemini AI ───────────────────────────────────────────
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash-native-audio-preview-12-2025
GEMINI_REPORT_MODEL=gemini-2.5-flash-lite
GEMINI_TOKEN_TTL=300

# ── CORS ────────────────────────────────────────────────
FRONTEND_URL=http://localhost:5173

# ── Rate Limiting ───────────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
